@model BioGamesTransport.Data.SQL.Orders
@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Új rendelés
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form asp-action="Create" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="panel-body">
                                <!-- Nav tabs -->
                                <ul class="nav nav-tabs">
                                    <li class="active">
                                        <a href="#customerTab" data-toggle="tab">Ügyfél</a>
                                    </li>
                                    <li>
                                        <a href="#orderTab" data-toggle="tab">Megrendelés</a>
                                    </li>
                                    <li>
                                        <a href="#productsTab" data-toggle="tab">Termékek</a>
                                    </li>
                                </ul>
                                <!-- Tab panes -->
                                <div class="tab-content">
                                    <div class="tab-pane fade in active" id="customerTab">
                                        @await Html.PartialAsync("~/Views/Orders/Partial/CreateCustomer.cshtml")
                                    </div>
                                    <div class="tab-pane fade" id="orderTab">
                                        @await Html.PartialAsync("~/Views/Orders/Partial/BasicOrder.cshtml")
                                    </div>
                                    <div class="tab-pane fade" id="productsTab">
                                        @await Html.PartialAsync("~/Views/Orders/Partial/CreateOrderDetails.cshtml")
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="form-group text-center">
                                <input type="submit" value="Mentés" class="btn btn-default" />
                            </div>
                        </form>
                    </div>
                </div>
           
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
