@model BioGamesTransport.Data.SQL.InvoiceAddresses

@{
    ViewData["Title"] = "Létrehozás";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Számlázási cím</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Létrehozás
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="CustomerId" value="@ViewBag.CustomerId" />

                            <div class="form-group col-md-3 input-height float-left">
                                <label asp-for="FirstName" class="control-label"></label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3 input-height float-left">
                                <label asp-for="LastName" class="control-label"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3 input-height float-left">
                                <label asp-for="Country" class="control-label"></label>
                                <input asp-for="Country" class="form-control" />
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3 input-height float-left">
                                <label asp-for="Zipcode" class="control-label"></label>
                                <input asp-for="Zipcode" class="form-control" />
                                <span asp-validation-for="Zipcode" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3 input-height float-left">
                                <label asp-for="City" class="control-label"></label>
                                <input asp-for="City" class="form-control" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-3 input-height float-left">
                                <label asp-for="Address" class="control-label"></label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3 input-height float-left">
                                <label asp-for="Company" class="control-label"></label>
                                <input asp-for="Company" class="form-control" />
                                <span asp-validation-for="Company" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3 input-height float-left">
                                <label asp-for="TaxNumber" class="control-label"></label>
                                <input asp-for="TaxNumber" class="form-control" />
                                <span asp-validation-for="TaxNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3 input-height float-left">
                                <label asp-for="Phone" class="control-label"></label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3 input-height float-left">
                                <label asp-for="Comment" class="control-label"></label>
                                <input asp-for="Comment" class="form-control" />
                                <span asp-validation-for="Comment" class="text-danger"></span>
                            </div>

                            <div class="clearfix"></div>
                            <div class="form-group text-center">
                                <input type="submit" value="Mentés" class="btn btn-success" />
                            </div>
                        </form>
                    </div>
                </div>
                <div>
                    <a class="btn btn-primary btn-sm" asp-controller="Customers" asp-action="Details" asp-route-id="@ViewBag.CustomerId">Vissza</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
