@model BioGamesTransport.Data.SQL.OrderDetails
@{
    ViewData["Title"] = "Delete";
}
<h2>Törlés</h2>
<h3>Biztos benne, hogy törölni szeretné a megrendelésből ?</h3>
<div>
    <h4>Megrendelt termék</h4>
    <hr />
    <dl class="dl-horizontal customer-description">
        <dt>
            @Html.DisplayNameFor(model => model.ProductOutId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductOutId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ProductRef)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductRef)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Manufacturer)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Manufacturer.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Order)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Order.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Images)
        </dt>
        <dd>
            <img class="img-thumbnail" style="max-width:100px;" src='@Url.Action( "ShowImg", "images", new { id = Model.ImagesId })' />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Törlés" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-controller="Orders" asp-action="Details" asp-route-id="@Model.OrderId">Vissza a listához</a>
    </form>
</div>
