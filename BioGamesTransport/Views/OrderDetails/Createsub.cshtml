@model BioGamesTransport.Data.SQL.OrderDetails
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Plusz termék hozzáadása</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Új Termék hozzáadása
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form asp-action="CreateSub" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="OrderId" value="@ViewBag.OrderId" />


                            <div class="form-group col-md-3 input-height float-left">
                                <label asp-for="ProductName" class="control-label"></label>
                                <input asp-for="ProductName" class="form-control" />
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3 input-height float-left">
                                <label asp-for="ProductRef" class="control-label"></label>
                                <input asp-for="ProductRef" class="form-control" />
                                <span asp-validation-for="ProductRef" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3 input-height float-left">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3 input-height float-left">
                                <label asp-for="Quantity" class="control-label"></label>
                                <input asp-for="Quantity" class="form-control" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3 input-height float-left">
                                <label asp-for="InStock" class="control-label"></label>
                                <input  asp-for="InStock" class="form-control" />
                                <span asp-validation-for="InStock" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3 input-height float-left">
                                <label asp-for="PurchasePrice" class="control-label"></label>
                                <input asp-for="PurchasePrice" class="form-control" />
                                <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                            </div>


                            <div class="form-group col-md-3 input-height float-left">
                                <label asp-for="ManufacturerId" class="control-label"></label>
                                <select asp-for="ManufacturerId" class="form-control" asp-items="ViewBag.ManufacturerId"></select>
                                <span asp-validation-for="ManufacturerId" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3 input-height float-left">
                                <label asp-for="ShipUndertakenDate" class="control-label"></label>
                                <input asp-for="ShipUndertakenDate" class="form-control" />
                                <span asp-validation-for="ShipUndertakenDate" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3 input-height float-left">
                                <label asp-for="ShipExpectedDate" class="control-label"></label>
                                <input asp-for="ShipExpectedDate" class="form-control" />
                                <span asp-validation-for="ShipExpectedDate" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3 input-height float-left">
                                <label asp-for="ShipDeliveredDate" class="control-label"></label>
                                <input asp-for="ShipDeliveredDate" class="form-control" />
                                <span asp-validation-for="ShipDeliveredDate" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3 input-height float-left">
                                <label asp-for="Comment" class="control-label"></label>
                                <input asp-for="Comment" class="form-control" />
                                <span asp-validation-for="Comment" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3 float-left">
                                <label asp-for="ImagesId" class="control-label"></label>
                                <input class="form-control" type="file" name="Image" />
                                <span asp-validation-for="ImagesId" class="text-danger"></span>
                            </div>
                            <div class="clearfix"></div>
                            <div class="form-group  text-center">
                                <input type="submit" value="Mentés" class="btn btn-success" />
                            </div>
                        </form>
                    </div>
                </div>
                <div>
                    <a class="btn btn-primary btn-sm" asp-route-id="@ViewBag.OrderId" asp-action="Details" asp-controller="Orders">Vissza a listához</a>
                </div>
            </div>
        </div>
    </div>
</div>